<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.solvd.warehouseProject.daos.ILocationDAO">
    <resultMap id="LocationResultMap" type="Location" autoMapping="false">
        <id property="id" column="id"/>
        <result property="street" column="street"/>
        <result property="number" column="number"/>
        <result property="code" column="code"/>
        <association property="city" resultMap="com.solvd.warehouseProject.daos.ICityDAO.CityResultMap"/>
    </resultMap>
    <select id="get" resultMap="LocationResultMap">
        <![CDATA[
            SELECT * FROM Locations WHERE id = #{id}
        ]]>
    </select>
    <insert id = "insert" useGeneratedKeys = "true" keyProperty= "id">
        <![CDATA[
            INSERT INTO Locations (street, number, code, cities_id)
            VALUES (#{street}, #{number}, #{code}, #{city.id})
        ]]>
    </insert>
    <update id="update">
        <![CDATA[
            UPDATE Locations
            SET street = #{street}, number = #{number}, code = #{code}, cities_id = #{city.id} WHERE id = #{id}
        ]]>
    </update>
    <delete id="delete">
        <![CDATA[
            DELETE FROM Locations WHERE id=#{id}
        ]]>
    </delete>
    <select id="getAll" resultMap="LocationResultMap">
        <![CDATA[
            SELECT * FROM Locations;
        ]]>
    </select>
</mapper>